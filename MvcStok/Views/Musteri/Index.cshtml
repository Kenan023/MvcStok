@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
      <b> Aranacak Musteri Adi:</b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<table class="table table-bordered">
    <tr>
        <th>MUSTERI ID</th>
        <th>MUSTERI AD</th>
        <th>MUSTERI SOYAD</th>
        <th>SIL</th>
        <th>GUNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mst in Model)
        {
            <tr>
                <th>@mst.MUSTERIID</th>
                <td>@mst.MUSTERIAD</td>
                <td>@mst.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mst.MUSTERIID" class="btn btn-danger">SIL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GUNCELLE</a></td>
                <td>
                    @Html.ActionLink("Sil Butonu", "Sil", new { id = mst.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gercekden Silmek Istiyormusunuz?')" })
                </td>
            </tr>
        }
    </tbody>


</table>
<a href="/MUSTERI/YENIMUSTERI/" class="btn btn-primary"> YENI MUSTERI EKLE</a>

